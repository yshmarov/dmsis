- if current_user
  = link_to 'Submit new idea', new_idea_path, class: 'btn btn-success btn-block'
  %p
  .card.container-fluid
    %p
    /.form-inline
    .row
      .col-auto
        - if current_user.image?
          = image_tag current_user.image, size: '20x20', alt: "that's me", class: 'rounded-circle'
        %b= link_to current_user.username, user_path(current_user)
      /.col
      /  = link_to edit_user_registration_path do
      /    = fa_icon "cog"
      .col
        = link_to destroy_user_session_path, method: :delete do
          = fa_icon "sign-out"
    %p
    %span.badge.badge-secondary.btn-block{"data-placement" => "right", "data-toggle" => "tooltip", :title => "score based on all activity"}
      =  current_user.points
      points
    %p
    %b= link_to "#{current_user.ideas.count} ideas", my_ideas_path
    %p
    %b= link_to "#{current_user.votes.up.count} upvotes", upvoted_ideas_path
    %p
    /%b
    /  = current_user.votes.down.count
    /  downvotes
    /%p
    %b= link_to "#{current_user.cofounders.count} want to do", cofounding_ideas_path
    %p
  %p
  .card.container-fluid
    %p
    Discover
    = Idea.count
    ideas 
    %br
    validated by 
    = User.count
    users
    = ActsAsVotable::Vote.count
    times
    %p
  %p
  .card.container-fluid
    %p
    .row
      .col
        Top tags
      .col
        .text-right
          = link_to 'all', tags_path
    %p
    .form-inline
      - Tag.joins(:idea_tags).group('tags.id').order('count(tags.id) DESC').limit(5).each do |tag|
        /%div{:style => "word-wrap: break-word"}
        %span.badge.badge-default.border
          = link_to tag.popular_name, tag_path(tag), class: 'text-dark'
        /%span.badge.badge-default
        /  = link_to tag.popular_name, tag
    %p
  %br
- else
  .card
    %h5.card-header.bg-success.white-text Startup inspiration from the crowd
    .embed-responsive.embed-responsive-16by9
      %iframe.embed-responsive-item{:allow => "autoplay; encrypted-media", :allowfullscreen => "", :frameborder => "0", :height => "315", :src => "https://www.youtube.com/embed/H16ldnm_-ak?rel=0", :width => "560"}
