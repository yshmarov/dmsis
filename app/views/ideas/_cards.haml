/.container-fluid
- @ideas.each do |idea|
  .text-center
    - if current_user.voted_up_on? idea
      = far_icon "caret-up 3x"
      UPVOTE
    - unless current_user.voted_for? idea
      = link_to "<i class='fa fa-caret-up'></i> UPVOTE".html_safe, like_idea_path(idea), method: :put, class: 'btn btn-primary sign-up'
      /= link_to like_idea_path(idea), method: :put do
      /  = fa_icon "caret-up 3x"
      /  UPVOTE
    /.row
    /%h3
    /  %span.badge.badge-success
    /    = idea.total_score
    /.row
    - unless current_user.voted_for? idea
      = link_to "<i class='fa fa-caret-down'></i> DOWN".html_safe, dislike_idea_path(idea), method: :put, class: 'btn btn-primary sign-up'
      /= link_to dislike_idea_path(idea), method: :put do
      /  = fa_icon "caret-down 3x"
    - if current_user.voted_down_on? idea
      = fa_icon "caret-down 3x"
    %p
  .card.container
    %b= link_to idea.name, idea
    = idea.description
    .row
    .form-inline
      - idea.tags.each do |tag|
        %span.badge.badge-default
          = link_to tag.name, tag
      %br
    .row.bg-light
      .col
        = link_to idea_path(idea) do
          = fa_icon "comments"
          = idea.comments.count
          comments
        %br
        = link_to idea_path(idea) do
          = fa_icon "users"
          = idea.cofounders.count
          cofounders
      .col.text-center
        %p
        - if idea.cofounders.where(user_id: current_user.id).present?
          %span.badge.badge-secondary
            You've applied!
        - else
          = link_to 'I wanna do this!', idea_path(idea), class: 'btn btn-primary'
        %p
      .col
        .text-right
          .font-weight-light.font-italic
            = time_ago_in_words(idea.created_at)
            ago by
            - if idea.user_id == current_user.id
              %span.badge.badge-success
                You
            - else
              = idea.user.username
  %p