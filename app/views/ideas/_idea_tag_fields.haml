.nested-fields.idea-tag-fields
  .form-inline
    .tag_from_list{:style => "display: inline;"}
      = f.association :tag, collection: Tag.order(:name), prompt: 'Choose an existing tag', label: false
    - if current_user.has_role?(:admin)
      = link_to_add_association 'or create a new tag', f, :tag, class: 'btn btn-success'
      = link_to_remove_association 'remove tag', f, class: 'btn btn-danger'